@import '/towxml/style/main.wxss';


/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/

/**主题配色（浅色样式）**/
@import '/towxml/style/theme/light.wxss';

/**主题配色（深色样式）**/
@import '/towxml/style/theme/dark.wxss';

.topic-list-head{
  display: flex;
  flex-direction: row;
}
.topic-user-avatar{
  width: 84rpx;
  height: 84rpx;
  margin: 10rpx;
  border-radius: 50%;
  flex-basis: 84rpx;
}

.topic-user-loginname{
  flex:1;
  display: flex;
  justify-content: center; 
  align-content: center;
  font-size: 14px;
  flex-direction: column;
  color: #999;
}

.topic-user-title{
  margin:20rpx;
  font-size:16px;
  color: #333;
}
.topic-user-icon{
  display: flex;
  flex-direction: row;
}

.topic-user-good{
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  font-size: 12px;
  background: #ff3800;
  margin: 10rpx 5rpx;
  color: #FFFFFF;
  text-align: center;
}
.topic-user-top{
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 6rpx;
  font-size: 12px;
  background: #4F94CD;
  margin: 10rpx 5rpx;
  color: #FFFFFF;
  text-align: center;
}
.reply-wrap{
  margin:10rpx 0; 
  background: #FFFFFF;
}

/* reset rowmxl style */

.h2w__main {
  margin:10rpx 40rpx;
  padding-top:0;
}
