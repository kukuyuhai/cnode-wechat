/* pages/topic/topic.wxss */

.swiper-tab {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  text-align: center;
  font-size: 16px;
}

.swiper-tab-list {
  flex: 1;
  color: #999;
  line-height: 100rpx;
  border-bottom: 1px solid #eee;
}

.swiper-tab-list.current {
  border-bottom: 2px solid #13547a;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/*topic list  */

.navigator-list {
  background: #fff;
  margin: 15rpx 0;
}

.topic-list-head {
  display: flex;
  flex-direction: row;
}

.topic-user-avatar {
  width: 84rpx;
  height: 84rpx;
  margin: 10rpx;
  border-radius: 50%;
  flex-basis: 84rpx;
}

.topic-user-loginname {
  flex: 1;
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 14px;
  flex-direction: column;
  color: #999;
}

.topic-user-title {
  margin: 20rpx;
  font-size: 16px;
  color: #333;
}

.topic-user-icon {
  display: flex;
  flex-direction: row;
}

.topic-user-good {
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  font-size: 12px;
  background: #ff3800;
  margin: 10rpx 5rpx;
  color: #fff;
  text-align: center;
}

.topic-user-top {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 6rpx;
  font-size: 12px;
  background: #4f94cd;
  margin: 10rpx 5rpx;
  color: #fff;
  text-align: center;
}

.topic-user-count {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
  border-top: 1px solid #eee;
}

.topic-user-count-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #999;
  border-left: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}
